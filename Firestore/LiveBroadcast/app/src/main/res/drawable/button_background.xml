<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 회색 그림자 -->
    <item>
        <shape
            android:left="2dp"
            android:top="2dp">
            <solid android:color="#AAAAAA" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 검은색 그림자 -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="#000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 하얀색 배경 -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>